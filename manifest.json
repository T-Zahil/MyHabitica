{
  "manifest_version": 2,

  "name": "MyHabitica",
  "description": "This extension allows the user to change the style of Habitica website.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [{
    "css": ["style.css"],
    "js": ["script.js"],
    "matches": ["https://habitica.com/*"]
  }]
}